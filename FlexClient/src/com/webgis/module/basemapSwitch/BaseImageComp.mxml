<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   width="60" height="60"
				   borderColor="{borderColor}"
				   borderVisible="true">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<fx:Script>
		<![CDATA[
			[Bindable]
			public var imgUrl="";
			[Bindable]
			public var labelStr="";
			[Bindable]
			public var borderColor="";

			protected function lblBaseMap_mouseOverHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				lblBaseMap.setStyle("backgroundColor", "blue");
				bc3.setStyle("borderColor","blue");
			}

			protected function lblBaseMap_mouseOutHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				lblBaseMap.setStyle("backgroundColor", "gray");
				bc3.setStyle("borderColor","white");
			}
		]]>
	</fx:Script>
	<s:BorderContainer  width="54" height="54" borderColor="white" borderWeight="3" >
		<s:BorderContainer id="bc3"  width="52" height="52" borderColor="white" borderWeight="1" >
		<s:Image source="{imgUrl}"
				 width="100%"
				 height="100%">
		</s:Image>
		<s:Line height="0"
				width="100%">
			<s:stroke>
				<s:SolidColorStroke color="{borderColor}"/>
			</s:stroke>
		</s:Line>
		<s:Label id="lblBaseMap"
				 backgroundColor="gray"
				 color="white"
				 verticalAlign="middle"
				 text="{labelStr}"
				 width="100%"
				 height="40%"
				 textAlign="center"
				 bottom="0"
				 backgroundAlpha="0.3"
				 mouseOver="lblBaseMap_mouseOverHandler(event)"
				 mouseOut="lblBaseMap_mouseOutHandler(event)">
		</s:Label>
		</s:BorderContainer>
	</s:BorderContainer>
</s:BorderContainer>
