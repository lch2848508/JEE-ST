<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer height="30" dataChange="itemrenderer1_dataChangeHandler(event)" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" autoDrawBackground="true">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;

			[Bindable]
			private var legendImg:Object=null;

			protected function itemrenderer1_dataChangeHandler(event:FlexEvent):void
			{
				if (data.imgData)
				{
					legendImg=data.imgData;
					currentState="IsLayer";
				}
				else
				{
					legendImg=null;
					currentState="IsGroup";
				}
			}
		]]>
	</fx:Script>
	<s:states>
		<s:State name="IsLayer"/>
		<s:State name="IsGroup"/>
	</s:states>
	<s:HGroup width="100%" height="100%" verticalAlign="middle" gap="0">
		<s:Spacer id="space" width="{data.type*20}"/>
		<s:Group width="28" height="100%" includeIn="IsLayer">
			<s:Image source="{legendImg}" id="img" verticalCenter="0" horizontalCenter="0" verticalAlign="middle" horizontalAlign="center"/>
		</s:Group>
		<s:Spacer width="2"/>
		<s:Label text="{data.label}" fontWeight="{!data.imgData?'bold':'normal'}" id="lbl" width="100%"/>
	</s:HGroup>
</s:ItemRenderer>
