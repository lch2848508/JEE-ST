<?xml version="1.0" encoding="utf-8"?>
<s:MXTreeItemRenderer dataChange="mxtreeitemrenderer1_dataChangeHandler(event)" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Script>
		<![CDATA[
			import mx.controls.Tree;
			import mx.events.FlexEvent;

			protected function mxtreeitemrenderer1_dataChangeHandler(event:FlexEvent):void
			{
				var tree:Tree=this.owner as Tree;
				currentState=tree.getParentItem(data) == null ? "group" : "layerItem";
			}
		]]>
	</fx:Script>
	<s:states>
		<s:State name="group"/>
		<s:State name="layerItem"/>
	</s:states>
	<s:HGroup left="0" right="0" top="0" bottom="0" verticalAlign="middle">
		<s:Rect id="indentationSpacer" width="{treeListData.indent}" percentHeight="100" alpha="0">
			<s:fill>
				<s:SolidColor color="0xFFFFFF"/>
			</s:fill>
		</s:Rect>
		<s:Group id="disclosureGroup">
			<s:BitmapImage source="{treeListData.disclosureIcon}" visible="{treeListData.hasChildren}"/>
		</s:Group>
		<s:BorderContainer width="10" height="10" contentBackgroundColor="{data.groupColor}" backgroundColor="{data.groupColor}" includeIn="group"/>
		<s:Label toolTip="{data.caption}" fontSize="{data.children?14:12}" color="{!data.children&amp;&amp;!data.geometrys? 0xCCCCCC:0x000000}" fontWeight="{data.children?'bold':'normal'}" id="labelField" text="{treeListData.label}" paddingTop="2"/>
	</s:HGroup>
</s:MXTreeItemRenderer>
