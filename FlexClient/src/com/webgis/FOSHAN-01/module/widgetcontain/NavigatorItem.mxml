<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" gap="3" width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var label:String="";

			[Bindable]
			public var selected:Boolean=false;

			public var control:Object=null;

			public var index:int=0;
		]]>
	</fx:Script>
	<s:Label buttonMode="true" mouseChildren="false" useHandCursor="true" fontWeight="{selected?'bold':'normal'}" color="{selected?0x1E8AE5:0x000000}" width="100%" height="100%" textAlign="center" verticalAlign="bottom" text="{label}"/>
	<s:Group width="100%" height="3">
		<s:Line visible="{selected}" left="2" right="2" height="100%" id="line">
			<s:stroke>
				<s:SolidColorStroke weight="3" color="#1E8AE5"/>
			</s:stroke>
		</s:Line>
	</s:Group>
</s:VGroup>
