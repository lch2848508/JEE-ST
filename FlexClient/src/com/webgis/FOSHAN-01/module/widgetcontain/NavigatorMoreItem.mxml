<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" width="24" height="100%">

	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.DropdownEvent;
			import mx.events.ListEvent;

			protected function popupanchor1_clickHandler(event:MouseEvent):void
			{
				combobox.open();
			}

			[Bindable]
			public var items:ArrayCollection=null;
			[Bindable]
			public var cbWidth:int=0;

			[Bindable]
			public function set selectIndex(value:int):void
			{
				if (value == -1)
				{
					combobox.selectedItem=null;
					combobox.selectedIndex=-1;
				}
				else
				{
					combobox.selectedItem=items[value];
					combobox.selectedIndex=value;
				}

			}

			public var callFunction:Function=null;

			protected function combobox_changeHandler(event:ListEvent):void
			{
				if (callFunction)
					callFunction(combobox.selectedItem);
			}
		]]>
	</fx:Script>

	<s:Image toolTip="更多内容" buttonMode="true" mouseChildren="false" useHandCursor="true" click="popupanchor1_clickHandler(event)" source="@Embed('more.png')" verticalCenter="0" horizontalCenter="0"/>
	<mx:ComboBox visible="false" selectedIndex="-1" change="combobox_changeHandler(event)" dropdownWidth="{cbWidth}" width="16" id="combobox" dataProvider="{items}" alpha="0" height="16" verticalCenter="0" horizontalCenter="0">
	</mx:ComboBox>
</s:Group>
