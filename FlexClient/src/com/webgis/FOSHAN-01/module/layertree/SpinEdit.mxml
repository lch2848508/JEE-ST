<?xml version="1.0" encoding="utf-8"?>
<s:HGroup gap="-2" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" width="100" height="25" verticalAlign="middle">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			[Bindable]
			public var minValue:int=0;
			[Bindable]
			public var maxValue:int=100;
			[Bindable]
			public var stepValue:int=1;

			public var callFunction:Function=null;

			[Bindable]
			public var value:int=1;

			protected function spinner1_valueCommitHandler(event:FlexEvent):void
			{
				textInput.text="" + spinner.value;
				this.value = spinner.value;
				if (callFunction)
					callFunction(spinner.value);
			}
		]]>
	</fx:Script>
	<s:TextInput width="100%" editable="false" id="textInput" text="{value}"/>
	<s:Spinner height="{textInput.height}" id="spinner" value="{value}" valueCommit="spinner1_valueCommitHandler(event)" width="18" minimum="{minValue}" maximum="{maxValue}" stepSize="{stepValue}"/>
</s:HGroup>
