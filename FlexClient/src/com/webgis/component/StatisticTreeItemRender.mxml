<?xml version="1.0" encoding="utf-8"?>
<s:MXTreeItemRenderer dataChange="mxtreeitemrenderer1_dataChangeHandler(event)" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx">

	<fx:Script>
		<![CDATA[
			import com.estudio.flex.utils.ArrayCollectionUtils;
			import com.estudio.flex.utils.Convert;

			import mx.controls.Tree;
			import mx.events.FlexEvent;

			private function getIcon():Class
			{
				if (data.root)
					return rootIcon;
				if (data.type == 0)
					return groupIcon;
				return excelIcon;
			}

			[Embed(source="/assets/webgis/server16.png")]
			[Bindable]
			public var rootIcon:Class;

			[Embed(source="/assets/common/folder.png")]
			[Bindable]
			public var groupIcon:Class;

			[Embed(source="/assets/webgis/TableStandalone16.png")]
			[Bindable]
			public var excelIcon:Class;

			protected function mxtreeitemrenderer1_dataChangeHandler(event:FlexEvent):void
			{
				img.source=getIcon();
			}
		]]>
	</fx:Script>


	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
	</s:states>
	<s:HGroup left="0" right="0" top="0" bottom="0" verticalAlign="middle">
		<s:Rect id="indentationSpacer" width="{treeListData.indent}" percentHeight="100" alpha="0">
			<s:fill>
				<s:SolidColor color="0xFFFFFF"/>
			</s:fill>
		</s:Rect>
		<s:Group id="disclosureGroup">
			<s:BitmapImage source="{treeListData.disclosureIcon}" visible="{treeListData.hasChildren}"/>
		</s:Group>
		<s:Image width="16" height="16" id="img" verticalCenter="0"/>
		<s:Label fontWeight="{data.root?'bold':'normal'}" id="labelField" text="{treeListData.label}" paddingTop="2"/>
	</s:HGroup>
</s:MXTreeItemRenderer>
