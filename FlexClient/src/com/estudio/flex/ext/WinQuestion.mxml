<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow title="每日一题" creationComplete="{loadFile();}" close="titlewindow1_closeHandler(event)" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" width="600" height="400">
	<fx:Script>
		<![CDATA[
			import com.estudio.flex.utils.AjaxUtils;
			import com.estudio.flex.utils.AlertUtils;

			import mx.controls.Alert;
			import mx.controls.RadioButton;
			import mx.controls.RadioButtonGroup;
			import mx.core.FlexGlobals;
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;

			[Bindable]
			var stlx:String=null;
			[Bindable]
			var stnr:String=null;
			[Bindable]
			var rightAnswer:String=null;

			private var comp2Value:Object={};
			private var compList:Array=[];
			private var questionInfo:Object=null;

			var myRadioButtonGroup:RadioButtonGroup=new RadioButtonGroup();
			private static var url:String="../servlet/question";

			///////////////////////////////////////////////////////////////////////////////////////////
			public function loadFile()
			{
				stlx=questionInfo.questionInfo[0].caption;
				stnr=questionInfo.questionInfo[0].question;
				for (var i:int=0; i < questionInfo.questionChoiceInfo.length; i++)
				{
					var answerItem:QuestionItem=new QuestionItem();
					answerItem.label=questionInfo.questionChoiceInfo[i].xxms;
					answerItem.group=myRadioButtonGroup;
					answerItem.value=questionInfo.questionChoiceInfo[i].xxbh;
					choiceGroup.addElement(answerItem);
					var zqx:String=questionInfo.questionChoiceInfo[i].sfzq;
					if (zqx == '1')
						rightAnswer=questionInfo.questionChoiceInfo[i].xxbh;
				}

			}

			/////////////////////////////////////////////////////////////////////////////////
			private function postResult():void
			{
				if (myRadioButtonGroup.selectedValue == null)
				{
					AlertUtils.alert("选择答案后才能交卷!", 2);
					return;
				}
				var result:String=myRadioButtonGroup.selectedValue.toString();
				if (rightAnswer == result)
				{
					AlertUtils.alert("恭喜您答对了！");
					titlewindow1_closeHandler(null);
					postToServer(true);
				}
				else
				{
					AlertUtils.confirm("您的答案不正确，是否确定交卷？", function():void
					{
						titlewindow1_closeHandler(null);
						postToServer(false);
					});
				}
			}

			//////////////////////////////////////////////////////////////////////////////
			private function postToServer(isOk:Boolean):void
			{
				AjaxUtils.postData(url, {o: "postEveryDayQuestion", score: (isOk ? 100 : 0)}, function(str:Object, token:Object):void
				{
					AlertUtils.msnMessage("系统", "您的成绩已经提交到系统中。", false);
				});
			}

			//////////////////////////////////////////////////////////////////////////////
			public static function execute():void
			{
				AjaxUtils.postData(url, {o: "getQuestion4EveryDay"}, function(dataStr:String, token:Object):void
				{
					var json:Object=JSON.parse(dataStr);
					if (json.r)
					{
						if (instance == null)
						{
							instance=new WinQuestion();
							instance.questionInfo=json;
						}
						PopUpManager.addPopUp(instance, FlexGlobals.topLevelApplication as DisplayObject, true);
						PopUpManager.centerPopUp(instance);
					}
				});
			}
			//////////////////////////////////////////////////////////////////////////////
			private static var instance:WinQuestion=null;

			protected function titlewindow1_closeHandler(event:CloseEvent):void
			{
				PopUpManager.removePopUp(instance);
			}

			///////////////////////////////////////////////////////////////////////////////////////////////////////
			protected function postBtnClick(event:MouseEvent):void
			{
				postResult();

			}

			///////////////////////////////////////////////////////////////////////////////////////////////////////
			protected function button4_clickHandler(event:MouseEvent):void
			{
				titlewindow1_closeHandler(null);
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here
		<s:RadioButtonGroup id="myRadioButtonGroup" /> -->
	</fx:Declarations>
	<s:VGroup width="100%" height="100%" gap="0">
		<s:BorderContainer width="100%" height="30" borderWeight="0" borderVisible="false">
			<s:Label left="15" top="10" fontWeight="bold" text="{'试题类型:'+stlx}">
			</s:Label>
		</s:BorderContainer>
		<s:BorderContainer width="100%" height="50%" borderWeight="0" borderVisible="false">
			<s:Label left="30" fontSize="14" top="10" right="30" text="{'题目: '+stnr+'    '}" width="100%">
			</s:Label>
		</s:BorderContainer>
		<s:VGroup width="100%" height="100%" id="choiceGroup">

		</s:VGroup>
		<s:Line width="100%" height="0">
			<s:stroke>
				<s:SolidColorStroke color="#313131"/>
			</s:stroke>
		</s:Line>
		<s:Group width="100%" height="40">
			<s:Button label="交卷" width="75" verticalCenter="0" right="85" height="30" click="postBtnClick(event)"/>
			<s:Button label="关闭" right="5" verticalCenter="0" width="75" height="30" click="button4_clickHandler(event)"/>
		</s:Group>
	</s:VGroup>


</s:TitleWindow>
