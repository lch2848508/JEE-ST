			</s:Button>
			<s:Button id="btnOK" width="75" height="30" fontWeight="bold" enabled="{!this.readonly}" label="保存" click="eventSaveButtonClick(event)" tabIndex="65536">
			</s:Button>
			<s:Button id="btnClose" width="75" height="30" fontWeight="bold" label="关闭" click="eventCloseButtonClick(event)" tabIndex="65537">
