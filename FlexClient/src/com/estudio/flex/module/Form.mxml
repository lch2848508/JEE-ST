	<s:states>
		<s:State name="dialogStyle"/>
		<s:State name="dialogStyleAndHiddenButton"/>
		<s:State name="normalStyle"/>
		<s:State name="normalToolbarStyle"/>
	</s:states>
	<s:VGroup id="groupMain" left="0" right="0" top="0" bottom="0" paddingBottom="{_isDialog?3:0}" paddingLeft="{_isDialog?5:-1}" paddingRight="{_isDialog?5:-1}" paddingTop="{_isDialog?5:(_showToolbarEx?0:-1)}" gap="-1">

