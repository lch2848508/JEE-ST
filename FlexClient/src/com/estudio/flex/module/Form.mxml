		<component:ToolbarGroup includeIn="normalToolbarStyle" id="groupFormToolbarContain" width="100%">
			<s:Line height="100%" left="0" width="0">
				<s:stroke>
					<s:SolidColorStroke color="#7B889C"/>
				</s:stroke>
			</s:Line>

			<s:Line height="100%" right="0" width="0">
				<s:stroke>
					<s:SolidColorStroke color="#7B889C"/>
				</s:stroke>
			</s:Line>
			<s:HGroup width="100%" height="100%" paddingLeft="3" paddingRight="3" verticalAlign="middle" gap="3" top="-1" id="groupFormToolbar"/>
		</component:ToolbarGroup>

		<!-- 表单区域 -->
		<s:Group width="100%" height="100%" id="groupFormContainAutoFill">
			<s:Scroller width="100%" height="100%">
