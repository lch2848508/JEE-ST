<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="28" creationComplete="group1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;

			[Bindable]
			public var topBorder:Boolean = false;
			
			[Bindable]
			public var bottomBorder:Boolean = false;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				this.addElementAt(topLine,0);
				this.addElementAt(bottomLine,0);
				this.addElementAt(fill, 0);
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<s:Rect id="fill" width="100%" height="100%" left="0" top="0">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="#E0EEFF"/>
					<s:GradientEntry color="#D4E7FF"/>
					<s:GradientEntry color="#E0EEFF"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		
		<s:Line left="0" top="0" width="100%" height="0" id="topLine" visible="{topBorder}">
			<s:stroke>
				<s:SolidColorStroke caps="square" color="0x606976" weight="1"/>
			</s:stroke>
		</s:Line>
		
		<s:Line left="0" bottom="0" width="100%" height="0" id="bottomLine" visible="{bottomBorder}">
			<s:stroke>
				<s:SolidColorStroke caps="square" color="0x606976" weight="1"/>
			</s:stroke>
		</s:Line>
	</fx:Declarations>

</s:Group>
