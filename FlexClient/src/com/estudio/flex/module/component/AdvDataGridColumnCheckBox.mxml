<?xml version="1.0" encoding="utf-8"?>
<s:MXAdvancedDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" focusEnabled="true">
	<fx:Script>
		<![CDATA[
			import com.estudio.flex.utils.ArrayCollectionUtils;
			import com.estudio.flex.utils.Convert;
			[Bindable]
			public var isEditable:Boolean=false;
			public var fieldName:String="";

			protected function checkbox1_clickHandler(event:MouseEvent):void
			{
				data[fieldName]=checkbox.selected ? 1 : 0;
				ArrayCollectionUtils.flagRecordModified(data);
				owner["owner"].settingParentRefValue(data);
			}
		]]>
	</fx:Script>
	<!--
	<s:Label id="lblData" top="0" left="0" right="0" bottom="0" text="{listData.label}"/>
	-->
	<s:CheckBox id="checkbox" click="checkbox1_clickHandler(event)" verticalCenter="0" horizontalCenter="0" selected="{Convert.object2Boolean(data[fieldName])}" enabled="{isEditable}">

	</s:CheckBox>
</s:MXAdvancedDataGridItemRenderer>
