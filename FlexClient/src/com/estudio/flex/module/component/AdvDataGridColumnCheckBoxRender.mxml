<?xml version="1.0" encoding="utf-8"?>
<s:MXAdvancedDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" focusEnabled="true" height="100%">
	<fx:Script>
		<![CDATA[
			protected function chkBox_clickHandler(event:MouseEvent):void
			{
				data["__chk__"]=chkBox.selected;
			}
		]]>
	</fx:Script>


	<s:CheckBox visible="{data}" verticalCenter="0" horizontalCenter="0" width="14" selected="{data['__chk__']}" id="chkBox" click="chkBox_clickHandler(event)">

	</s:CheckBox>

</s:MXAdvancedDataGridItemRenderer>
