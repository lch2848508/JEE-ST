<?xml version="1.0" encoding="utf-8"?>
<s:Line xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var color:uint = 0x000000;
			[Bindable]
			public var lineWidth:int = 1;
		]]>
	</fx:Script>
	<s:stroke>
		<s:SolidColorStroke color="{color}" weight="{lineWidth}"/>
	</s:stroke>
</s:Line>
