<?xml version="1.0" encoding="utf-8"?>
<s:Group x="0" y="0" width="100%" height="100%" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx">
    <fx:Script>
        <![CDATA[
			import mx.core.UIComponent;
			import spark.primitives.Line;


            [Bindable]
            public var bgColor:uint = 0xFFFFFF;

			
            //边界包围
            public static function wrap(control:UIComponent , left:Boolean , top:Boolean , right:Boolean , bottom:Boolean , bgColor:uint = 0xFFFFFF):UIComponent
            {
                var result:BorderWrapContain = new BorderWrapContain ();
				control.left = control.top = control.right = control.bottom = 0;				
				if(left)
				{
					control.left = 1;
					var l:Line = new Line();
					l.left=l.top=l.bottom=l.width=0;
					l.stroke = result.lineColorStroke;
					result.addElement(l);
				}
				
				if(top)
				{
					control.top = 1;
					var l:Line = new Line();
					l.left=l.top=l.right=l.height=0;
					l.stroke = result.lineColorStroke;
					result.addElement(l);
				}
				
				if(right)
				{
					control.right = 1;
					var l:Line = new Line();
					l.right=l.top=l.bottom=l.width=0;
					l.stroke = result.lineColorStroke;
					result.addElement(l);
				}
				
				if(bottom)
				{
					control.bottom = 1;
					var l:Line = new Line();
					l.left=l.bottom=l.right=l.height=0;
					l.stroke = result.lineColorStroke;
					result.addElement(l);
				}
				result.addElement (control);
                return result;
				
            }
			
		]]>
    </fx:Script>
    <fx:Declarations>
        <!-- 将非可视元素（例如服务、值对象）放在此处 -->
		<s:SolidColorStroke id="lineColorStroke" color="0x606976" weight="1" caps="none"/>
    </fx:Declarations>
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="{bgColor}" />
		</s:fill>
	</s:Rect>
</s:Group>
