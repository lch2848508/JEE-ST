<?xml version="1.0" encoding="utf-8"?>
<s:MXDataGridItemRenderer focusEnabled="true" creationComplete="mxdatagriditemrenderer1_creationCompleteHandler(event)" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Script>
		<![CDATA[
			import com.estudio.flex.utils.StringUtils;

			import mx.events.FlexEvent;

			[Bindable]
			public var columnStyle:Object=null;

			[Bindable]
			public var fontName:String="";

			[Bindable]
			public var fontSize:int=12;


			protected function mxdatagriditemrenderer1_creationCompleteHandler(event:FlexEvent):void
			{
				if (columnStyle != null)
				{
					for (var k in columnStyle)
						lblData.setStyle(k, columnStyle[k]);
				}
			}
		]]>
	</fx:Script>
	<s:Label fontFamily="{StringUtils.isEmpty(fontName)?'YaHei Consolas Hybrid,微软雅黑':fontName}" fontSize="{fontSize}" id="lblData" left="0" right="0" top="0" bottom="0" paddingLeft="3" paddingRight="3" paddingTop="3" verticalAlign="middle" text="{dataGridListData.label}" lineBreak="explicit"/>
</s:MXDataGridItemRenderer>
