<s:MXDataGridItemRenderer focusEnabled="true" dataChange="mxdatagriditemrenderer1_dataChangeHandler(event)" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Script>
		<![CDATA[
			import com.estudio.flex.utils.Convert;
			import com.estudio.flex.utils.StringUtils;

			import mx.events.FlexEvent;

			[Bindable]
			public var checkedValue:String="1";

			[Bindable]
			public var uncheckedValue:String="0";

			[Binadble]
			public var readonly:Boolean=false;

			[Bindable]
			public var cellValue:String="";

			////////////////////////////////////////////////////////////////////////////
			protected function mxdatagriditemrenderer1_dataChangeHandler(event:FlexEvent):void
			{
				checkbox.selected=Convert.object2Boolean(data[dataGridListData.dataField]);
				cellValue=checkbox.selected ? checkedValue : uncheckedValue;
			}
			//////////////////////////////////////////////////////////////////////////////
		]]>
	</fx:Script>
	<s:CheckBox id="checkbox" width="16" height="16" horizontalCenter="0" verticalCenter="0" doubleClickEnabled="false" enabled="false"/>
</s:MXDataGridItemRenderer>
