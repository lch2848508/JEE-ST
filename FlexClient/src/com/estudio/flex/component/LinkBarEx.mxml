<?xml version="1.0" encoding="utf-8"?>
<mx:LinkBar xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx">
    <fx:Script>
        <![CDATA[
            override protected function clickHandler(event:MouseEvent):void
            {
                super.clickHandler (event);

                var lb:DisplayObject = event.target as DisplayObject;
                var num:int = getChildIndex (lb);
                if (num == -1)
                {
                    return;
                }
                var dp:* = this.dataProvider;
                this.dataProvider = null;
                this.dataProvider = dp;
                this.selectedIndex = num;
            }
        ]]>
    </fx:Script>
</mx:LinkBar>
