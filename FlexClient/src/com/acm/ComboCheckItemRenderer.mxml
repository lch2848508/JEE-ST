<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer height="22" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" autoDrawBackground="true">
	<s:layout>
		<s:HorizontalLayout paddingBottom="0" paddingLeft="2" paddingRight="2" paddingTop="0"/>
	</s:layout>

	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			import mx.events.ItemClickEvent;

			protected function onClick(event:MouseEvent):void
			{
				var e:ItemClickEvent=new ItemClickEvent(ItemClickEvent.ITEM_CLICK, true);
				e.item=data;
				owner.dispatchEvent(e);
			}

			override public function set data(value:Object):void
			{
				var w:int=owner["dropDown"].width;
				renderer.width=FlexGlobals.topLevelApplication.measureTextWidth(value.label) + 21;
				super.data=value;
			}
		]]>
	</fx:Script>


	<s:CheckBox id="renderer" selected="@{data.selected}" label="{label}" height="100%" click="onClick(event)"/>
</s:ItemRenderer>
